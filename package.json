{
  "name": "root",
  "version": "1.2.0",
  "private": true,
  "engines": {
    "node": "18 || 20"
  },
  "scripts": {
    "prepare": "husky install",
    "ci": "turbo run lint build test --concurrency=100%",
    "start": "turbo run start --parallel",
    "start-backend": "turbo run start --concurrency=100% --filter=backend",
    "build": "turbo run build --concurrency=100%",
    "tsc": "tsc",
    "export-dynamic": "turbo run export-dynamic --concurrency=100%",
    "copy-dynamic-plugins": "yarn --cwd dynamic-plugins/_utils run copy-dynamic-plugins",
    "clean": "turbo run clean --concurrency=100%",
    "test": "turbo run test --concurrency=100%",
    "fix": "backstage-cli repo fix",
    "lint": "turbo run lint --concurrency=100%",
    "lint-staged": "lint-staged",
    "prettier:check": "prettier --ignore-unknown --check .",
    "prettier:fix": "prettier --ignore-unknown --write .",
    "new": "backstage-cli new --scope internal",
    "git:tag": "cross-var git tag -a v$npm_package_version -m \"Release v$npm_package_version\"",
    "versions:bump": "backstage-cli versions:bump --pattern @{backstage,roadiehq,immobiliarelabs,janus-idp,pagerduty}/*",
    "versions:all": "node ./scripts/update-backstage.mjs"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "plugins/*",
      "dynamic-plugins/_utils",
      "dynamic-plugins/imports",
      "dynamic-plugins/wrappers/*"
    ]
  },
  "dependencies": {
    "node-gyp": "10.1.0"
  },
  "devDependencies": {
    "@backstage/cli": "0.26.2",
    "@smithy/util-utf8": "2.3.0",
    "@spotify/prettier-config": "15.0.0",
    "cross-var": "1.1.0",
    "husky": "9.0.11",
    "ip": "2.0.1",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "sanitize-html": "2.13.0",
    "turbo": "1.13.0",
    "typescript": "5.4.3",
    "undici": "6.10.2"
  },
  "resolutions": {
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18"
  },
  "jest": {
    "testTimeout": 20000
  },
  "prettier": "@spotify/prettier-config",
  "lint-staged": {
    "*": "turbo run prettier:fix --",
    "*.{jsx,ts,tsx,mjs,cjs}": "turbo run lint --concurrency=1 -- --fix",
    "!(.eslintrc).js": "turbo run lint --concurrency=1 -- --fix"
  },
  "packageManager": "yarn@4.1.1"
}
