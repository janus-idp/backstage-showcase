    "@backstage/plugin-scaffolder-node@^0.5.1": "patch:@backstage/plugin-scaffolder-node@npm%3A0.6.1#./.yarn/patches/@backstage-plugin-scaffolder-node-npm-0.6.1-a2cc13065e.patch"
  },
  "jest": {
    "testTimeout": 20000
  },
  "packageManager": "yarn@3.8.6"
}
