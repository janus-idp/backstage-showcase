{
  "name": "root",
  "version": "0.2.0",
  "private": true,
  "engines": {
    "node": "16 || 18"
  },
  "scripts": {
    "prepare": "husky install",
    "ci": "turbo run lint build test",
    "start": "turbo run start --parallel",
    "start-backend": "turbo run start --filter=backend",
    "build": "turbo run build",
    "tsc": "tsc",
    "clean": "turbo run clean",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "test:e2e-ci": "turbo run test:e2e-ci",
    "lint": "turbo run lint",
    "lint-staged": "lint-staged",
    "prettier:check": "prettier --ignore-unknown --check .",
    "prettier:fix": "prettier --ignore-unknown --write .",
    "new": "backstage-cli new --scope internal",
    "git:tag": "cross-var git tag -a v$npm_package_version -m \"Release v$npm_package_version\"",
    "changeset": "changeset",
    "changeset:empty": "changeset --empty",
    "version": "yarn changeset version && yarn run git:tag"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "plugins/*"
    ]
  },
  "devDependencies": {
    "@backstage/cli": "0.22.12",
    "@changesets/cli": "2.26.2",
    "@spotify/prettier-config": "15.0.0",
    "cross-var": "1.1.0",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "prettier": "3.0.3",
    "turbo": "1.10.14",
    "typescript": "5.2.2"
  },
  "resolutions": {
    "@types/react": "17.0.65",
    "@types/react-dom": "17.0.20"
  },
  "prettier": "@spotify/prettier-config",
  "lint-staged": {
    "*": "yarn run prettier:fix",
    "*.{js,jsx,ts,tsx,mjs,cjs}": "yarn run lint -- -- --fix"
  },
  "packageManager": "yarn@1.22.19"
}
