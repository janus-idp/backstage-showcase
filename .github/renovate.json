{
  "extends": [
    "config:js-app",
    ":gitSignOff",
    ":rebaseStalePrs",
    "group:allNonMajor",
    "group:linters",
    "group:test"
  ],
  "labels": ["kind/dependency upgrade"],
  "npm": {
    "minimumReleaseAge": "1 day"
  },
  "pip_requirements": {
    "fileMatch": ["**/requirements-*.in","**/requirements-*.txt"],
    "postUpgradeTasks": {
      "commands": ["./.rhdh/docker/cachito_hash.sh"],
      "fileFilters": ["**/requirements-*.in","**/requirements-*.txt"],
      "executionMode": "update"
    }
  
  },
  "packageRules": [
    {
      "matchPackagePatterns": [
        "^@backstage/",
        "^@janus-idp/",
        "^@immobiliarelabs/",
        "^@roadiehq/"
      ],
      "groupName": ["Backstage packages"],
      "dependencyDashboardApproval": true
    }
  ],
  "ignorePaths": ["**/dist-dynamic/**"]
}
